<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SOE.Views.MainPage"
             Title="Contacts">

    <Grid RowDefinitions="Auto,*,Auto,Auto" RowSpacing="0">
        <!-- Search Bar (optional) -->
        <!-- <SearchBar Grid.Row="0" Placeholder="Search contacts..." /> -->

        <RefreshView Grid.Row="1" 
                     Command="{Binding LoadContactsCommand}"
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView x:Name="ContactsList" 
                           ItemsSource="{Binding Contacts}"
                           SelectionMode="Single"
                           SelectionChanged="OnContactSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="15,10" ColumnDefinitions="Auto,*,Auto">
                            <Frame CornerRadius="20" 
                                   HeightRequest="40" 
                                   WidthRequest="40"
                                   BackgroundColor="#2196F3"
                                   HorizontalOptions="Start">
                                <Label Text="{Binding Nickname, StringFormat='{0}'}" 
                                       TextColor="White"
                                       FontSize="16"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>

                            <VerticalStackLayout Grid.Column="1" Padding="10,0">
                                <Label Text="{Binding Nickname}" FontSize="16"/>
                                <Label Text="{Binding LastMessage}" 
                                       FontSize="14" 
                                       TextColor="Gray"
                                       LineBreakMode="TailTruncation"/>
                            </VerticalStackLayout>

                            <Label Grid.Column="2" 
                                   Text="{Binding LastMessageDate, StringFormat='{0:HH:mm}'}" 
                                   FontSize="12" 
                                   TextColor="Gray"
                                   VerticalOptions="Start"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Padding="10" BackgroundColor="White">
            <Entry x:Name="NewContactIdEntry" 
                   Placeholder="Enter user ID"
                   BackgroundColor="#f5f5f5"
                   ClearButtonVisibility="WhileEditing"/>
            <Button Grid.Column="1" 
                    Text="New Chat" 
                    Clicked="OnStartNewChatClicked"
                    Margin="5,0,0,0"
                    Padding="20,0"
                    BackgroundColor="#2196F3"
                    TextColor="White"/>
        </Grid>

        <Button Grid.Row="3" 
                Text="Start VPN" 
                Clicked="StartVpnClicked" 
                Margin="10"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="5"/>
    </Grid>
</ContentPage>